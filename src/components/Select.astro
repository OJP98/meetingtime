---
interface Props {
  id: string;
  label?: string;
  twClass?: string[];
  ariaLabel: string;
}

const { id, label, twClass, ariaLabel } = Astro.props;
---

<label>
  {
    label && (
      <div class="label">
        <span class="label-text">{label}</span>
      </div>
    )
  }
  <select
    aria-label={ariaLabel}
    id={id}
    class="select select-bordered"
    class:list={twClass}
  >
    <slot />
  </select>
</label>
